process
{
    cache = true
    errorStrategy = 'finish'
    beforeScript = 'chmod 755 .'
}

params.container = 'docker'
if (params.container=='docker')
{
    docker.enabled = true
    docker.runOptions = '-u \$(id -u):\$(id -g)'
    process.container = 'alexdhill/create:test'
}
else if (params.container=='conda')
{
    conda.enabled = true
    process.conda = '${projectDir}/bin/conda/create_env.yaml'
}

params.exec = 'local'
if (params.exec=='slurm')
{
    params.threads = -1
    params.memory = -1
    process.executor = 'slurm'
    params.scratch = ''
    if (params.scratch != '') process.scratch = params.scratch
    params.njobs = 15
    executor.queueSize = params.njobs
    params.account = ''
    if (params.account != '') executor.account = params.account
}
else if (params.exec=="local")
{
    params.scratch = false
    params.njobs = -1
    params.account = ''
    params.threads = 0
    if (params.threads>0)
    {
        executor.cpus = params.threads
    }
    params.memory = 0
    if (params.memory>0)
    {
        executor.memory = params.memory
    }
}

params.clean = false
cleanup = params.clean