if (params.get("clean")) cleanup = params.clean

process
{
    cache = true
    errorStrategy = 'finish'
    beforeScript = 'chmod 755 .'
}

if (params.get('container') && params.container=='conda')
{
    conda.enabled = true
    process.conda = '${projectDir}/bin/conda/create_env.yaml'
}

else if (params.get('container') && params.container=='docker')
{
    docker.enabled = true
    docker.runOptions = '-u \$(id -u):\$(id -g)'
    process.container = 'alexdhill/create:test'
}
if (params.get('exec') && params.exec=='slurm')
{
    process.executor = 'slurm'
    if (params.get('scratch')) process.scratch = params.scratch
    if (params.get('njobs')) executor.queueSize = params.njobs
    if (params.get("account") && params.account!='') executor.account = params.account
}
else if (params.get('exec') && params.exec=="local")
{
    if (params.get('threads') && params.threads>0)
    {
        executor.cpus = params.threads
    }
    if (params.get("memory") && params.memory>0)
    {
        executor.memory = params.memory
    }
}