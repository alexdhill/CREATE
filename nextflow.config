includeConfig 'profiles/prism.nf'

// Add boost plugin for aggressive cleanup
plugins {
  id 'nf-boost'
}

// Set standard process options
process
{
    cache = true
    errorStrategy = 'finish'
    beforeScript = 'set -e && chmod 755 .'
}

// Setup the processing environment
params.container = 'docker'
if (params.container=='docker')
{
    docker.enabled = true
    docker.runOptions = "-u \$(id -u):\$(id -G | sed -e's/ / --group-add /g')"
    process.container = 'alexdhill/create:test'
}
else if (params.container=='conda')
{
    conda.enabled = true
    process.conda = '${projectDir}/bin/conda/environment.yaml'
}

// Set execution process
params.exec = 'local'
if (params.exec=='slurm')
{
    process.executor = 'slurm'
    params.threads = -1
    params.memory = -1
    params.scratch = ''
    if (params.scratch != '') process.scratch = params.scratch
    params.njobs = 15
    executor.queueSize = params.njobs
    params.account = ''
    if (params.account != '') executor.account = params.account
}
else if (params.exec=="local")
{
    params.scratch = false
    params.njobs = -1
    params.account = ''
    params.threads = 0
    if (params.threads>0)
    {
        params {
            njobs = 15
            scratch = false
            account = ''
        }
        process.executor = 'slurm'
        process.scratch = params.scratch
        executor.queueSize = params.njobs
        // Testing slurm limiter to prevent overload?
        executor.pollInterval = '3min'
        executor.queueStatInterval = '5min'
        executor.submitRateLimit = '30sec'

        if (params.account!='') executor.account = params.account
    }
    params.memory = 0
    if (params.memory>0)
    {
        println("--exec: ${params.exec}");
        throw new IllegalArgumentException('Execution mode must be either "local" or "slurm"')
    }
}

// Set cleanup
params.clean = false
if (params.clean == true)
{
    cleanup = params.clean
} else if (params.clean == "fast")
{
    boost.cleanup = true
}
